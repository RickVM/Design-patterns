<Window x:Class="App.StationManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherStation"
        mc:Ignorable="d"
        Title="Station Manager" Height="100.919" Width="435.38">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.139"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button x:Name="buttonStartStation" Content="Start weather station" HorizontalAlignment="Left" Margin="214,28,0,0" VerticalAlignment="Top" Width="167" Click="button_Click_StartWeatherStation"/>
        <Label x:Name="labelCity" Content="Pick a city:" HorizontalAlignment="Left" Margin="9,21,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxCity" HorizontalAlignment="Left" Height="23" Margin="79,25,0,0" TextWrapping="Wrap" Text="Eindhoven" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
